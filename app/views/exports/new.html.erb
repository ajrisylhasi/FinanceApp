<h1 style="color:black">New Export</h1>

<div class="row" style="width:100%">
  <div class="col-md-6 col-md-offset-3">
    <%= nested_form_for(@export)do |f|%>
      <%= render 'shared/error_messages', object: f.object %>
      <div style="container">
        <%= f.label :nr_exportit %>
        <%= f.text_field :nr_exportit, class: 'form-control' %>
        <%= f.date_field :data, class: 'form-control', value: Date.today %>
        
        <%= f.file_field :files, multiple: true%>
        <%= f.select("client_id", Client.all.collect {|n| [ n.kompania,  n.id ] }, { prompt: "Select Client", multiple: false, id: "n" }) %>
      </div>
      <div class="buttons">
        <%= f.submit "Add Export",  class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <%= link_to "Back", exports_path, class:"btn btn-primary" %>
</div>