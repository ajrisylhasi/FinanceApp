
<%= render 'layouts/flash' %>
<h1><%= @export.nr_exportit %></h1>
<h1 style="color:black">Manage Products</h1>
<div class="row" style="width:100%">
  <div class="col-md-6 col-md-offset-3">
    <% if $gabimet.count != 0 %>
      <center><ul class="alert alert-danger"><a class="close" data-dismiss="alert">&#215;</a>
        <% $gabimet.each do |a| %>
          <li style="margin:15px"><%= a %></li>
        <% end %>
      </ul></center>
    <% end %>
    <%= nested_form_for(@export)do |f|%>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title" id="exampleModalLabel"><strong>Shto produkt te re</strong></h4>
              </div>
              <%= f.fields_for :export_products do |na| %>
                <%= render 'shared/error_messages', object: na.object %>
                <% unless na.object.persisted? %>
                  <div class="modal-body">
                
                    <%= na.select :product_id, Product.pluck( :pershkrimi, :id), { prompt: "Select Product", multiple: false}, :id => "product_select", class: "form-control" %>
                    <%= na.label :sasia %>
                    <%= na.number_field :sasia, step: :any, class: "form-control" %>
                    <div>
                    <%= na.label :normative_id, "Selekto Normativen" %>
                    <%= na.grouped_collection_select("normative_id", Product.order(:pershkrimi), :working_normatives, :pershkrimi, :id, :show_text,
                                                                          { include_blank: "Select Normative", multiple: false}, :id => "normative_select", class: "form-control") %>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Mbylle</button>
                    <%= na.submit "Shto", class: "btn btn-primary" %>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
  <center>
    <%= link_to "Fatura", @export.fatura, class:"btn btn-primary" %>
    <%= link_to "Specifikacioni", specifikacioni_path(@export), class:"btn btn-primary" %>
    <%= link_to "Mbetja", export_mbetja_path(@export), class:"btn btn-primary" %>
  </center>
</div>
Pesha Bruto: <%= @pesha_b %><br>
Pesha Neto: <%= @pesha_n %>
<%= @e %>
<center>
  <div class="fatura-tabela">
    <table>
      <tr class="hedi">
        <td colspan="2"><center><button type="button" data-toggle="modal" data-target="#exampleModal" style="border: 0px; background: none; font-size: 35px; font-weight: 100; color: green; margin-bottom: 5px">&#43;</button></center></td>
        <td style="width:100px"><center>Pershkrimi</center></td>
        <td style="width:100px"><center>Tarif Kodi</center></td>
        <td style="width:100px"><center>Sasia</center></td>
        <td style="width:100px"><center>Qmimi</center></td>
        <td style="width:100px"><center><span>&#x2715;</span></center></td>
      </tr>
      <% iter = 0 %>
      <% @export.export_products.each do |ep| %>
        <% e = ep.export %>
        <% pr = ep.product %>
        <% if ep.persisted? %>
          <% if iter.even? %>
            <tr style="background: #dee2e6">  
          <% else %>
            <tr style="background: white"> 
          <% end %>
            <td style="width:100px" colspan="2"><center><%= iter+=1 %></center></td>
            <td style="width:100px"><center><%= pr.pershkrimi %></center></td>
            <td style="width:100px"><center><%= pr.tarif_kodi %></center></td>
            <td style="width:75px"><center><%= ep.sasia %></center></td>
            <td style="width:100px"><center><%= (pr.qmimi * ep.sasia ).round(2)%></center></td>
            <td style="width:100px"><center>
              <%= link_to ep, method: :delete do %>
                <span onclick="show_slow_warning()">&#x2715;</span>
              <% end %>
            </center></td>
          </tr>
        <% end %>
      <% end %>
    </table>
  </div>
</center>
<%= link_to 'Home', exports_path, class:"btn btn-primary" %>
<%= link_to 'Files', export_files_path(@export), class:"btn btn-primary" %>
<%= link_to 'Edit', edit_export_path(@export), class:"btn btn-primary" %>
<% $gabimet = [] %>
<div class="modal fade" id="slow_warning" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content" style="height: 450px;">
          <div class="modal-header">
            <center><h4 class="modal-title" id="exampleModalLabel" style="margin-top: 15px; font-family: Barlow"><strong>Duke u bere kalkulimet e Ekportit</strong></h4></center>
          </div> 
          <center><h4 class="modal-title" id="exampleModalLabel" style="margin-top: 15px; font-family: Barlow"><strong>Ju lutem prisni</strong></h4></center>
          <center><h4 class="modal-title" id="exampleModalLabel" style="margin-top: 15px; font-family: Barlow"><strong>Mund te zgjas disa sekonda</strong></h4></center>
          <div id="animation-box"></div>
        </div>
      </div>
    </div>
<script>
  function show_slow_warning() {
    $("#slow_warning").show();
    $("#slow_warning").modal({backdrop: 'static', keyboard: false});
  }
  $(document).ready(function() {
    $('#lolz').click(function(){
      show_slow_warning();
    });
  });
</script>