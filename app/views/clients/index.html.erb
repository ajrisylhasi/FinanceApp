<center><h1 style="font-family: Barlow; margin-top: 30px">Lista e Klienteve</h1></center>
<div><%= render "layouts/flash" %></div>
<%= render 'shared/error_messages' %>
<center>
  <div class="fatura-tabela" style="margin-top: -25px">
      
      <table>
        <tr style="border: 0px; margin-top: 0px; padding-top: 0px">
          <td style="min-width:75px;"><center><button type="button" data-toggle="modal" data-target="#exampleModal" style="border: 0px; background: none; font-size: 30px; color: green;">&#43;</button></center></td>
          <td colspan="9"><center></center></td>
        </tr>
        <tr class="hedi">
          <td style="min-width:75px"><center>#</center></td>
          <td style="min-width:75px"><center>Kompania</center></td>
          <td style="min-width:75px"><center>Qyteti</center></td>
          <td style="min-width:75px"><center>Konsingnacioni</center></td>
          <td style="min-width:100px"><center>Qyteti Konsignacionit</center></td>
          <td colspan="4"><center></center></td>
        </tr>
        <% iter = 0 %>
        <% @clients.each do |a| %>
          <% if iter.even? %>
            <tr style="background: #dee2e6">  
          <% else %>
            <tr style="background: white"> 
          <% end %>
            <td><center><%= iter+=1 %></td></center>
            <td><center><%= a.kompania %></td></center>
            <td><center><%= a.qyteti %></td></center>
            <td><center><%= a.konsignacioni %></td></center>
            <td><center><%= a.qyteti_k %></td></center>
            <td style="width: 25px"></td>
            <td style="width: 50px; border: 0px"><center><%= link_to a do %><span class="glyphicon glyphicon-eye-open" style="color: black; font-size: 21px"></span><% end%></td></center>
            <td style="width: 50px; border: 0px"><center><%= link_to edit_client_path(a) do %> <span class="glyphicon glyphicon-pencil" style="color: black; font-size: 18px"></span><% end %></td></center>
            <td style="width: 50px; border: 0px"><center><%= link_to a, method: :delete do %>
              <span class="glyphicon glyphicon-minus" style="color: black; font-size: 20px"></span><% end %>
            </td></center>
          </tr>
        <% end %>
      </table>
    </div>
  <div>
</center>
  

<%= nested_form_for(@client)do |f|%>
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="exampleModalLabel"><strong>Shto klient tÃ« ri</strong></h4>
        </div>
        <div class="modal-body">
          <%= f.label :kompania %>
          <%= f.text_field :kompania, class: 'form-control' %>
          
          <%= f.label :shteti %>
          <%= f.text_field :shteti, class: 'form-control' %>
          
          <%= f.label :qyteti %>
          <%= f.text_field :qyteti, class: 'form-control' %>
          
          <%= f.label :adresa %>
          <%= f.text_field :adresa, class: 'form-control' %>
          
          <%= f.label :numri_tel %>
          <%= f.text_field :numri_tel, class: 'form-control' %>
          
          <%= f.label :numri_fiskal %>
          <%= f.text_field :numri_fiskal, class: 'form-control' %>
          
          <%= f.label :numri_biz %>
          <%= f.text_field :numri_biz, class: 'form-control' %>
          
          <%= f.label :numri_tvsh %>
          <%= f.text_field :numri_tvsh, class: 'form-control' %>
          
          <%= f.label :konsignacioni %>
          <%= f.text_field :konsignacioni, class: 'form-control' %>
          
          <%= f.label :shteti_k, "Shteti i Konsignacionit" %>
          <%= f.text_field :shteti_k, class: 'form-control' %>
          
          <%= f.label :qyteti_k, "Qyteti i Konsignacionit" %>
          <%= f.text_field :qyteti_k, class: 'form-control' %>
          
          <%= f.label :adresa_k, "Adresa i Konsignacionit" %>
          <%= f.text_field :adresa_k, class: 'form-control' %>
          
          <%= f.label :numri_tel_k, "Numri Kontaktues i Konsignacionit" %>
          <%= f.text_field :numri_tel_k, class: 'form-control' %>
          
          <%= f.label :term, "Koha e pageses se Fatures" %>
          <%= f.number_field :term, class: 'form-control' %>
          
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
          
          <%= f.label :vat %>
          <%= f.number_field :vat, class: 'form-control', step: :any %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Mbylle</button>
          <%= f.submit "Shto", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>