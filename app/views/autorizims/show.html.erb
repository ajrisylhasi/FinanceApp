                <td style="width:100px"><center>Kodi Produktit</center></td>
                <td style="width:100px"><center>Tarif Kodi</center></td>
                <td style="width:100px"><center><span>&#x2715;</span></center></td>
              </tr>
              <% iter = 0 %>
              <% @autorizim.autorizim_products.each do |aa| %>
