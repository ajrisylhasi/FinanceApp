
<%= render 'layouts/flash' %>
<center><h1 style="font-family: Barlow; margin-top: 30px">Eksporti: <%= @exportlande.nr_exportit %></h1></center>
<br>
<center>
  <table class="tabela-import">
    <tr>
      <td>
        <div>
          <strong>Data</strong>
        </div>
      </td>
      <td>
        <div>
          <strong>Klienti</strong>
        </div>
      </td>
      <td>
        <div>
          <strong>Fatura</strong>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <div>
          <%= @exportlande.data %>
        </div>
      </td>
      <td>
        <div>
          <%= @exportlande.client.kompania %> 
        </div>
      </td>
      <td>
        <div>
          <%= @exportlande.fatura.nr_faturess %> 
        </div>
      </td>
    </tr>
  </table>
</center>
<style>
  .tabela-import{
    margin-bottom: 40px;
  }
  .tabela-import td {
    width: 300px;
    text-align: center;
  }
</style>
<div class="row" style="width:100%">
  <div class="col-md-6 col-md-offset-3">
    <% if $gabimet.count != 0 %>
      <center><ul class="alert alert-danger"><a class="close" data-dismiss="alert">&#215;</a>
        <% $gabimet.each do |a| %>
          <li style="margin:15px"><%= a %></li>
        <% end %>
      </ul></center>
    <% end %>
    <%= nested_form_for(@exportlande)do |f|%>
      <%= f.fields_for :explande_articles do |na| %>
        <%= render 'shared/error_messages', object: na.object %>
        
        <% unless na.object.persisted? %>
        <center><table>
          <tr>
            <div style="display: inline">
                <td width="180px">
                  <div style="text-align:center">
                    <%= na.select :import_id, Import.where(client: @exportlande.client).pluck( :nr_dud, :id), { prompt: "Select Import", multiple: false}, id: "product_select" %>
                  </div>
                </td>
                <td width="225px">
                  <%= na.label :sasia %>
                  <%= na.number_field :sasia, step: :any %>
                </td>
                <td>
                  <%= na.grouped_collection_select("import_article_id", Import.order(:data), :import_articles, :nr_dud, :id, :show_text_exp,
                                                      { include_blank: "Select Article", multiple: false}, :id => "normative_select") %>
                                                                            
                </td>
                
            </div>
          </tr>
        </table></center>
        <% end %>
      <% end %>
      <div class="buttons">
          <%= f.submit "Update Product", class: "btn btn-primary", name: "add_explande_article" %>
      </div>
    <% end %>
  </div>
  <center>
    <%= link_to "Back", exportlandes_path, class:"btn btn-primary" %>
  </center>
</div>
<h1>Numri i Produkteve:<%= @exportlande.explande_articles.count %></h1>
<center><table width="50%" border="solid #333 1px">
  <tr>
    <td>
      <%= "Pershkrimi" %>
    </td>
    <td>
      <%= "Tarif Kodi" %>
    </td>
    <td>
      <%= "Sasia" %>
    </td>
    <td>
      <%= "importi" %>
    </td>
    <td>
      <%= "Emertimi" %>
    </td>
  </tr>
  <% @exportlande.explande_articles.each do |na| %>
  
    <% n = na.exportlande %>
    <% a = na.import_article %>
    <% if na.valid? %>
      <tr>
        <td>
          <%= a.article.pershkrimi %>
        </td>
        <td>
          <%= a.article.tarif_kodi %>
        </td>
        <td>
          <%= na.sasia %>
        </td>
        <td>
          <%= na.import.nr_dud %>
        </td>
        <td>
          <%= na.import_article.emertimi %>
        </td>
        
        <td style="text-align:center;">
          <%= link_to na, method: :delete do %>
            <span>&#x2715;</span>
          <% end %>
        </td>
      </tr>
    <% end %>
    
  <% end %>
</table></center>

<%= link_to 'Home', exportlandes_path, class:"btn btn-primary" %>
<% $gabimet = [] %>
