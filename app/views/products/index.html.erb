<center><h1 style="font-family: Barlow; margin-top: 30px">Lista e Produkteve</h1></center>
<div><%= render "layouts/flash" %></div>

<%= render 'shared/error_messages' %>
<center>
  <div class="fatura-tabela">
      
      <table>
        <tr style="border: 0px; margin-top: 0px; padding-top: 0px">
          <td colspan="9"><center></center></td>
        </tr>
        <tr class="hedi">
          <td style="min-width:75px;"><center><button type="button" data-toggle="modal" data-target="#exampleModal" style="border: 0px; background: none; font-size: 30px; color: green;">&#43;</button></center></td>
          <td style="min-width:75px"><center>Tarif Kodi</center></td>
          <td style="min-width:75px"><center>Pershkrimi</center></td>
          <td style="min-width:75px"><center>Qmimi</center></td>
          <td colspan="4"><center></center></td>
        </tr>
        <% iter = 0 %>
        <% @products.each do |a| %>
          <% if iter.even? %>
            <tr style="background: #dee2e6">  
          <% else %>
            <tr style="background: white"> 
          <% end %>
            <td><center><%= iter+=1 %></td></center>
            <td><center><%= a.tarif_kodi %></td></center>
            <td><center><%= a.pershkrimi %></td></center>
            <td><center><%= a.qmimi%> €</td></center>
            <td style="width: 25px"></td>
            <td style="width: 50px; border: 0px"><center><%= link_to a do %><span class="glyphicon glyphicon-eye-open" style="color: black; font-size: 21px"></span><% end%></td></center>
            <td style="width: 50px; border: 0px"><center><%= link_to edit_product_path(a) do %> <span class="glyphicon glyphicon-pencil" style="color: black; font-size: 18px"></span><% end %></td></center>
            <td style="width: 50px; border: 0px"><center><%= link_to a, method: :delete do %>
              <span class="glyphicon glyphicon-minus" style="color: black; font-size: 20px"></span><% end %>
            </td></center>
          </tr>
        <% end %>
      </table>
    </div>
  <div>
</center>
    
</div>

<%= nested_form_for(@product)do |f|%>
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="exampleModalLabel"><strong>Shto produkt të ri</strong></h4>
        </div>
        <div class="modal-body">
          <%= f.label :pershkrimi %>
          <%= f.text_field :pershkrimi, class: 'form-control' %>
          <%= f.label :articlenr %>
          <%= f.text_field :articlenr, class: 'form-control' %>
          <%= f.label :tarif_kodi %>
          <%= f.number_field :tarif_kodi, class: 'form-control' %>
          <%= f.label :qmimi %>
          <%= f.number_field :qmimi, step: :any, class: 'form-control' %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Mbylle</button>
          <%= f.submit "Shto", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>